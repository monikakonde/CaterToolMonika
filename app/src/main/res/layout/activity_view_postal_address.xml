<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".activity.ViewPostalAddress">

<include
    android:id="@+id/inToolbar"
    layout="@layout/item_custom_toolbar" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/inToolbar"
    android:layout_marginTop="25dp"
    android:layout_marginHorizontal="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Postal Address"
        android:textColor="#888888"
        android:textSize="13sp"
        android:fontFamily="@font/lato_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ic_rectangle_bg"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvPostalAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="28dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tvEdit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Edit"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/ic_black_rectangle"
        android:gravity="center"
        android:drawableRight="@drawable/ic_edit_postal"
        android:paddingRight="10dp"
        android:layout_marginTop="23dp"/>

</LinearLayout>

</RelativeLayout>